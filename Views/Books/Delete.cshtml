@model LibraryManagementSystem.ViewModels.BookVM

@{
    ViewData["Title"] = "Delete";
    ViewData["SelectedController"] = "Books";
    Layout = "_DashboardLayout";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-10">Delete Book</h1>

    <div class="bg-white rounded-3xl shadow-xl p-8 max-w-2xl mx-auto transform hover:scale-102 transition-all duration-500">
        <h3 class="text-lg font-semibold text-red-600 mb-6">Are you sure you want to delete this?</h3>
        <h4 class="text-xl font-semibold text-gray-800 mb-6">Book</h4>
        <hr class="border-gray-200 mb-8">
        <dl class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-2">
            <div>
                <dt class="text-sm font-medium text-gray-600">Title</dt>
                <dd class="mt-2 text-sm text-gray-800">@Html.DisplayFor(model => model.Title)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-600">Author</dt>
                <dd class="mt-2 text-sm text-gray-800">@Html.DisplayFor(model => model.Author)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-600">ISBN</dt>
                <dd class="mt-2 text-sm text-gray-800">@Html.DisplayFor(model => model.ISBN)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-600">Quantity</dt>
                <dd class="mt-2 text-sm text-gray-800">@Html.DisplayFor(model => model.Quantity)</dd>
            </div>
        </dl>
        <form asp-action="Delete" class="mt-8 flex justify-end space-x-4">
            <input type="hidden" asp-for="BookId" />
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-all duration-300">
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Back to List
            </a>
            <button type="submit" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 transition-all duration-300">
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4a1 1 0 011 1v1H9V4a1 1 0 011-1z" />
                </svg>
                Delete
            </button>
        </form>
    </div>
</div>