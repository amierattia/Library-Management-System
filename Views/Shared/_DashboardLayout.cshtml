<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagementSystem</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50 text-gray-900">
    <div class="w-full flex min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-blue-800 text-white flex-shrink-0 hidden md:block fixed h-full">
            <div class="p-6">
                <h2 class="text-2xl font-bold mb-8">LibraryMS</h2>
                <nav class="space-y-2">
                    <a href="/Home" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700 transition duration-300 @(ViewData["SelectedController"]?.ToString() == "Home" ? "bg-blue-600" : "")">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        <span>Home</span>
                    </a>
                    <a href="/Students" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700 transition duration-300 @(ViewData["SelectedController"]?.ToString() == "Students" ? "bg-blue-600" : "")">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 7l-9-5 9-5 9 5-9 5z" />
                        </svg>
                        <span>Students</span>
                    </a>
                    <a href="/Books" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700 transition duration-300 @(ViewData["SelectedController"]?.ToString() == "Books" ? "bg-blue-600" : "")">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                        <span>Books</span>
                    </a>
                    <a href="/BorrowRecords" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700 transition duration-300 @(ViewData["SelectedController"]?.ToString() == "BorrowRecords" ? "bg-blue-600" : "")">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                        </svg>
                        <span>Borrow Records</span>
                    </a>
                </nav>
            </div>
        </aside>

        <!-- Mobile Menu Toggle -->
        <div class="md:hidden fixed top-0 left-0 z-50 p-4">
            <button id="menu-toggle" class="text-blue-600 focus:outline-none">
                <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
            </button>
        </div>

        <!-- Mobile Sidebar -->
        <div id="mobile-menu" class="hidden md:hidden fixed inset-0 bg-blue-800 text-white z-40">
            <div class="p-6">
                <button id="close-menu" class="text-white mb-4 focus:outline-none">
                    <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
                <h2 class="text-2xl font-bold mb-8">LibraryMS</h2>
                <nav class="space-y-4">
                    <a href="/Home" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700 transition duration-300 @(ViewData["SelectedController"]?.ToString() == "Home" ? "bg-blue-600" : "")">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        <span>Home</span>
                    </a>
                    <a href="/Students" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700 transition duration-300 @(ViewData["SelectedController"]?.ToString() == "Students" ? "bg-blue-600" : "")">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 7l-9-5 9-5 9 5-9 5z" />
                        </svg>
                        <span>Students</span>
                    </a>
                    <a href="/Books" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700 transition duration-300 @(ViewData["SelectedController"]?.ToString() == "Books" ? "bg-blue-600" : "")">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                        <span>Books</span>
                    </a>
                    <a href="/BorrowRecords" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700 transition duration-300 @(ViewData["SelectedController"]?.ToString() == "BorrowRecords" ? "bg-blue-600" : "")">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                        </svg>
                        <span>Borrow Records</span>
                    </a>
                </nav>
            </div>
        </div>

        <!-- Main Content -->
        <main class="flex-1 p-6 ml-0 md:ml-64">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        // Toggle mobile menu
        document.getElementById('menu-toggle')?.addEventListener('click', () => {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });
        document.getElementById('close-menu')?.addEventListener('click', () => {
            document.getElementById('mobile-menu').classList.add('hidden');
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>