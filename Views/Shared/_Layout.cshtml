<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagementSystem</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50 text-gray-900 min-h-screen flex flex-col">
    <!-- Navigation -->
    <header>
        <nav class="bg-white shadow-md sticky top-0 z-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a class="text-2xl font-bold text-indigo-600" asp-area="" asp-controller="Home" asp-action="Index">LibraryManagementSystem</a>
                    </div>
                    <div class="hidden md:flex items-center space-x-8">
                        <a class="text-gray-700 hover:text-indigo-600 font-medium" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="text-gray-700 hover:text-indigo-600 font-medium" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        <a class="text-gray-700 hover:text-indigo-600 font-medium" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                        <partial name="_LoginPartial" />
                    </div>
                    <div class="md:hidden flex items-center">
                        <button id="menu-toggle" class="text-gray-700 focus:outline-none">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
                <div class="px-4 pt-2 pb-3 space-y-1 sm:px-3">
                    <a class="block text-gray-700 hover:text-indigo-600 font-medium py-2" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="block text-gray-700 hover:text-indigo-600 font-medium py-2" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    <a class="text-gray-700 hover:text-indigo-600 font-medium" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="flex-1">
        <div class="w-full px-4 py-6">
            @RenderBody()
        </div>
    </main>


    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-6 mt-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="mb-4 md:mb-0">
                    <p>&copy; 2025 - LibraryManagementSystem</p>
                </div>
                <div class="flex space-x-4">
                    <a class="text-gray-300 hover:text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    <a class="text-gray-300 hover:text-white" href="#contact">Contact</a>
                    <a class="text-gray-300 hover:text-white" href="https://twitter.com" target="_blank">Twitter</a>
                    <a class="text-gray-300 hover:text-white" href="https://facebook.com" target="_blank">Facebook</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        // Toggle mobile menu
        document.getElementById('menu-toggle').addEventListener('click', () => {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>