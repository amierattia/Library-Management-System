@model IEnumerable<LibraryManagementSystem.Models.BorrowRecord>

@{
    ViewData["Title"] = "Borrow Records";
    ViewData["SelectedController"] = "BorrowRecords";
    Layout = "_DashboardLayout";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900">Borrow Records</h1>
        <a asp-action="Create" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-all duration-300">
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Create New
        </a>
    </div>

    <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-100">
                <thead class="bg-blue-50">
                    <tr>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Student)
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Book)
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.BorrowDate)
                        </th>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.ReturnDate)
                        </th>
                        <th scope="col" class="px-6 py-4 text-right text-xs font-medium text-gray-600 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-100">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-blue-50 transition-all duration-300">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                                @Html.DisplayFor(modelItem => item.Student.Name)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                                @Html.DisplayFor(modelItem => item.Book.ISBN)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                                @Html.DisplayFor(modelItem => item.BorrowDate)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                                @Html.DisplayFor(modelItem => item.ReturnDate)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a asp-action="Edit" asp-route-id="@item.BorrowRecordId" class="inline-flex items-center p-2 text-blue-600 hover:text-blue-800 rounded-full hover:bg-blue-100 transition">
                                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15.828l-5.657 1.414 1.414-5.657L18.414 2.586z" />
                                    </svg>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.BorrowRecordId" class="inline-flex items-center p-2 text-blue-600 hover:text-blue-800 rounded-full hover:bg-blue-100 transition">
                                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                    </svg>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.BorrowRecordId" class="inline-flex items-center p-2 text-red-600 hover:text-red-800 rounded-full hover:bg-red-100 transition">
                                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4a1 1 0 011 1v1H9V4a1 1 0 011-1z" />
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>