@model LibraryManagementSystem.Models.BorrowRecord

@{
    ViewData["Title"] = "Details";
    ViewData["SelectedController"] = "BorrowRecords";
    Layout = "_DashboardLayout";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-10">Borrow Record Details</h1>

    <div class="bg-white rounded-3xl shadow-xl p-8 max-w-2xl mx-auto transform hover:scale-102 transition-all duration-500">
        <h4 class="text-xl font-semibold text-gray-800 mb-6">Borrow Record</h4>
        <hr class="border-gray-200 mb-8">
        <dl class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-2">
            <div>
                <dt class="text-sm font-medium text-gray-600">Student</dt>
                <dd class="mt-2 text-sm text-gray-800">@Html.DisplayFor(model => model.Student.Name)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-600">Book</dt>
                <dd class="mt-2 text-sm text-gray-800">@Html.DisplayFor(model => model.Book.ISBN)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-600">Borrow Date</dt>
                <dd class="mt-2 text-sm text-gray-800">@Html.DisplayFor(model => model.BorrowDate)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-600">Return Date</dt>
                <dd class="mt-2 text-sm text-gray-800">@Html.DisplayFor(model => model.ReturnDate)</dd>
            </div>
            </dl>
            <div class="mt-8 flex justify-end space-x-4">
                <a asp-action="Edit" asp-route-id="@Model?.BorrowRecordId" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-all duration-300">
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15.828l-5.657 1.414 1.414-5.657L18.414 2.586z" />
                    </svg>
                    Edit
                </a>
                <a asp-action="Index" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-all duration-300">
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    Back to List
                </a>
            </div>
        </div>
    </div>